// Prisma schema for csloadout.gg
// Database: PostgreSQL 18
// Critical Gotcha: PostgreSQL 17+ requires explicit NULLS handling in unique constraints

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id String @id @default(uuid())

  // Names (dual storage for display + search)
  name         String // Original name from API
  display_name String // User-facing display name
  search_name  String // Normalized for search (lowercase, no special chars)
  description  String?

  // Classification
  type        String // skin, sticker, case, collection, agent, graffiti, patch, music_kit
  rarity      String? // consumer, industrial, milspec, restricted, classified, covert, contraband
  quality     String  @default("normal") // normal, stattrak, souvenir
  wear        String  @default("none") // factory_new, minimal_wear, field_tested, well_worn, battle_scarred, none
  weapon_type String? // AK-47, M4A4, AWP, Knife, Gloves, etc.

  // Images (multi-source fallback strategy - BDD Gotcha #1: Steam CDN URL expiration)
  image_url          String
  image_url_fallback String?
  image_local_path   String?

  // Skin-specific attributes
  wear_min      Float?
  wear_max      Float?
  pattern_count Int?

  // Relationships (Feature 02: Relational Browsing)
  collection_id String?
  collection    Collection? @relation(fields: [collection_id], references: [id], onDelete: SetNull)

  // Many-to-many: Items can appear in multiple cases
  case_items CaseItem[]

  // Feature 04: One-to-many: Item has prices from multiple marketplaces
  marketplace_prices MarketplacePrice[]

  // Feature 07: Items can appear in multiple user inventories
  inventory_items InventoryItem[]

  // Feature 08: Items can be used in loadouts
  loadout_weapon_skins LoadoutWeaponSkin[]

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Composite unique constraint - prevents duplicate items
  // PostgreSQL 17+ gotcha: Multiple NULL values allowed by default
  // Migration will add: NULLS DISTINCT clause
  @@unique([name, quality, wear])

  // Indexes for performance (Feature 01 & 02)
  @@index([search_name])
  @@index([type, rarity])
  @@index([weapon_type])
  @@index([collection_id]) // Fast collection → items queries

  // Feature 03: Full-Text Search Indexes (created via raw SQL migration)
  // Note: These are PostgreSQL-specific and not represented in Prisma schema
  //
  // - search_vector: tsvector column with GIN index (full-text search)
  //   Auto-updated via trigger on INSERT/UPDATE
  //   Indexes: name (weight A), weapon_type (B), description (C), search_name (D)
  //
  // - idx_items_name_trigram: GIN index for fuzzy autocomplete (pg_trgm)
  //   Handles typos: "asimov" → "Asiimov"
  //
  // - idx_items_name_prefix: B-tree index for exact prefix matching
  //   Fast path for <3 character queries: "ak" → "AK-47 | Redline"
  //
  // - idx_items_price: B-tree index on MIN(marketplace_prices.total_cost)
  //   For price range filters: $5-$20
  //
  // - idx_items_rarity: B-tree index on rarity (WHERE rarity IS NOT NULL)
  //   For rarity filters: "classified", "covert"
  //
  // - idx_items_wear: B-tree index on wear (WHERE wear != 'none')
  //   For wear condition filters: "factory_new", "minimal_wear"
  //
  // - idx_items_float: B-tree index on (wear_min, wear_max)
  //   For float value filters: 0.00-0.01
  //
  // - idx_items_search_combo: Composite index (weapon_type, rarity)
  //   Optimizes common filter combinations: "AK-47 + classified"
  //
  // Performance Targets (BDD):
  // - Basic search: <100ms (p95)
  // - Filtered search: <300ms
  // - Autocomplete: <50ms
  //
  // See: prisma/migrations/20251108_add_search_indexes/migration.sql
}

model Collection {
  id String @id @default(uuid())

  // Basic Information
  name        String
  slug        String  @unique // URL-friendly identifier
  description String?
  image_url   String

  // Metadata
  release_date      DateTime
  is_discontinued   Boolean   @default(false)
  discontinued_date DateTime?

  // URL Management (Gotcha #7: URL slug changes break backlinks)
  previous_slugs String[] @default([]) // Array of old slugs for 301 redirects

  // Relationships
  items Item[] // One-to-many: Collection has many items

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Indexes
  @@index([slug]) // Fast URL lookups
  @@index([release_date]) // Sort by newest first
}

model Case {
  id String @id @default(uuid())

  // Basic Information
  name        String
  slug        String  @unique // URL-friendly identifier
  description String?
  image_url   String

  // Metadata
  key_price    Float
  release_date DateTime

  // URL Management
  previous_slugs String[] @default([]) // Historical slugs for redirects

  // Relationships
  case_items CaseItem[] // Many-to-many through join table

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Indexes
  @@index([slug]) // Fast URL lookups
  @@index([release_date])
}

// Many-to-many join table: Case ↔ Item
// Stores drop probabilities for each case-item pair
model CaseItem {
  id String @id @default(uuid())

  // Foreign keys
  case_id String
  case    Case   @relation(fields: [case_id], references: [id], onDelete: Cascade)

  item_id String
  item    Item   @relation(fields: [item_id], references: [id], onDelete: Cascade)

  // Drop probability (Gotcha #4: Must sum to 100% per case)
  drop_probability Float // Percentage (0.79 for Covert, 79.92 for Consumer/Industrial, etc.)

  // Special item flag (knives, gloves highlighted in UI)
  is_special_item Boolean @default(false)

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Composite unique: prevent duplicate case-item pairs
  @@unique([case_id, item_id])

  // Indexes
  @@index([case_id]) // Fast case → items queries
  @@index([item_id]) // Fast item → cases queries
}

// Feature 04: Multi-Marketplace Price Aggregation
// Stores current prices from multiple marketplaces for each item
// BDD Reference: features/04-price-aggregation.feature
model MarketplacePrice {
  id String @id @default(uuid())

  // Foreign key to Item
  item_id String
  item    Item   @relation(fields: [item_id], references: [id], onDelete: Cascade)

  // Marketplace identifier
  platform String // "csfloat", "steam", "csmoney", "buff163", "dmarket", "tradeit"

  // Pricing data
  price                Float // Base price in specified currency
  currency             String  @default("USD") // ISO 4217 currency code (USD, EUR, CNY, RUB)
  seller_fee_percent   Float? // Platform seller fee percentage
  buyer_fee_percent    Float? // Platform buyer fee percentage
  total_cost           Float // price * (1 + total_fees/100) - what user actually pays

  // Inventory & Availability
  quantity_available Int?    // For bulk traders - how many available at this price
  listing_url        String? // Direct link to marketplace listing

  // Data freshness tracking
  // BDD: "Display data freshness indicator" - used for Live/Stale/Paused status
  last_updated DateTime @default(now())

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Composite unique constraint: one price per item per platform
  // BDD: "Prevent duplicate prices for same item-platform combination"
  @@unique([item_id, platform])

  // Performance indexes
  @@index([item_id]) // Fast lookups: all prices for an item
  @@index([platform]) // Filter by marketplace
  @@index([total_cost]) // Sort by price
  @@index([last_updated]) // Freshness queries (stale data detection)
  @@index([item_id, total_cost]) // Composite: find cheapest price for item (optimal)
}

// Feature 05: Fee Transparency & Total Cost Calculator
// Platform-wide fee configuration for accurate fee calculations
// BDD Reference: features/05-fee-transparency.feature:7-14
//
// Critical Gotcha: PostgreSQL DECIMAL vs MONEY type
// - Use DECIMAL(5,2) for percentages (e.g., 15.00% stored as 15.00)
// - MONEY type has locale issues and limited precision
// - Decimal ensures consistent cross-platform calculations
model PlatformFeeConfig {
  // Platform identifier (primary key)
  platform String @id // "steam", "csfloat", "csmoney", "buff163", "dmarket", "tradeit"

  // Fee percentages (DECIMAL for precision)
  // Gotcha addressed: Using Decimal instead of Float for money calculations
  buyer_fee_percent      Decimal @default(0) @db.Decimal(5, 2) // Buyer fee (0.00 to 999.99%)
  seller_fee_percent     Decimal @default(0) @db.Decimal(5, 2) // Seller fee (0.00 to 999.99%)
  hidden_markup_percent  Decimal @default(0) @db.Decimal(5, 2) // Hidden markup (CS.MONEY bot markup: 20.00%)

  // Documentation and verification
  fee_notes     String // Human-readable fee explanation (e.g., "10% Steam fee + 5% game-specific fee")
  last_verified DateTime? // When fees were last verified
  source_url    String? // Link to official fee documentation

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Performance index
  @@index([platform]) // Fast platform lookups
}

// Feature 06: Steam OpenID Authentication
// NextAuth v5 (Auth.js) database schema
// BDD Reference: features/06-steam-authentication.feature
//
// Critical Gotchas:
// - Steam uses OpenID 2.0 (legacy), NOT OpenID Connect
// - SteamID extracted from claimed_id: http://steamcommunity.com/openid/id/76561198012345678
// - Session duration: 30 days (2592000 seconds)
// - CSRF protection: state parameter required
model User {
  id String @id @default(uuid())

  // Steam Profile Data (BDD Scenario: "Fetch and store Steam profile data")
  steam_id String @unique // 64-bit SteamID extracted from OpenID claimed_id

  // Profile Information (from ISteamUser/GetPlayerSummaries/v2)
  persona_name    String // Steam username (can change)
  profile_url     String // https://steamcommunity.com/id/username or /profiles/steamid
  avatar          String // Avatar image URL from Steam CDN
  profile_state   Int    @default(1) // 1 = configured profile, 0 = not set up

  // Game Ownership (BDD Scenario: "Check CS2 game ownership")
  has_cs2_game Boolean @default(false) // Result from ISteamUser/CheckAppOwnership (appid 730)

  // Activity Tracking
  last_logoff DateTime? // Last time user was online (Unix timestamp from API)
  last_login  DateTime  @default(now()) // Last authentication timestamp

  // Relationships
  accounts  Account[]
  sessions  Session[]
  inventory UserInventory? // Feature 07: One-to-one inventory relationship
  loadouts  Loadout[] // Feature 08: User-created loadouts

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Indexes
  @@index([steam_id]) // Fast Steam profile lookups
  @@index([last_login]) // Activity queries
}

// NextAuth Account model - stores OAuth provider details
// BDD Scenario: "Extract SteamID from OpenID claimed identity"
model Account {
  id String @id @default(uuid())

  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  type               String // "oauth" for Steam OpenID
  provider           String // "steam"
  provider_account_id String // SteamID64 from Steam

  // OAuth tokens (Steam OpenID doesn't use refresh tokens)
  refresh_token String?
  access_token  String?
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String?
  session_state String?

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Composite unique: one account per provider per user
  @@unique([provider, provider_account_id])
  @@index([user_id])
}

// Session model - tracks active user sessions
// BDD Scenario: "Session expiration after 30 days"
model Session {
  id String @id @default(uuid())

  session_token String   @unique
  user_id       String
  user          User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  expires DateTime // Set to now() + 30 days per BDD requirements

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Indexes
  @@index([user_id])
  @@index([expires]) // Session cleanup queries
}

// VerificationToken - for email verification (not used for Steam, but required by NextAuth schema)
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Feature 07: Basic Inventory Import
// User inventory cache with sync status and privacy handling
// BDD Reference: features/07-inventory-import.feature
//
// Critical Gotchas:
// - Steam inventory endpoint: https://steamcommunity.com/inventory/{steamId}/730/2
// - IEconItems_730/GetPlayerItems is PERMANENTLY DISABLED (use new endpoint)
// - Rate limiting: 4-6 requests before 429 errors (reality vs 100K/day documented)
// - Cache TTL: 6 hours minimum to avoid rate limits
// - GDPR: 90-day auto-deletion for inactive users
// - Private inventories: ~30% of Steam users have private inventories
model UserInventory {
  id String @id @default(uuid())

  // Foreign key to User
  user_id  String @unique // One inventory per user
  user     User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  steam_id String // Denormalized for API calls (avoid join)

  // Inventory metadata
  total_items  Int     @default(0) // Count of items in inventory
  total_value  Decimal @default(0) @db.Decimal(10, 2) // Sum of all item values (USD)

  // Sync status tracking
  // BDD: "Cache prevents redundant API calls" - 6 hour TTL
  last_synced DateTime @default(now())
  sync_status String   @default("success") // "success", "private", "rate_limited", "error"
  error_message String? // Detailed error for debugging

  // Privacy handling
  // BDD: "Handle private inventory gracefully" - detect privacy changes
  is_public Boolean @default(true) // Steam inventory privacy state

  // Pagination cursor for large inventories (>2500 items)
  // BDD: "Import large inventory with pagination"
  last_asset_id String? // Steam asset ID cursor for incremental sync

  // GDPR compliance
  // BDD: "Auto-delete stale inventories (90-day retention)"
  consent_given    Boolean   @default(false) // User accepted privacy policy
  consent_date     DateTime? // When consent was granted
  scheduled_delete DateTime? // Auto-deletion timestamp (last_login + 90 days)

  // Relationships
  items InventoryItem[]

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Indexes
  @@index([user_id]) // Fast user → inventory lookup
  @@index([last_synced]) // Stale cache detection
  @@index([sync_status]) // Filter by status
  @@index([scheduled_delete]) // GDPR cleanup job queries
}

// Individual inventory items
// Stores Steam-specific data + cached pricing
// BDD Reference: features/07-inventory-import.feature
model InventoryItem {
  id String @id @default(uuid())

  // Foreign keys
  inventory_id String
  inventory    UserInventory @relation(fields: [inventory_id], references: [id], onDelete: Cascade)

  item_id String? // Link to items table (NULL if not matched)
  item    Item?   @relation(fields: [item_id], references: [id], onDelete: SetNull)

  // Steam-specific identifiers
  // BDD: "Extract float value from Steam API response"
  steam_asset_id   String @unique // Unique Steam inventory asset ID
  market_hash_name String // Steam market_hash_name for matching

  // Item attributes from Steam API
  // Gotcha: Use Decimal for float_value to preserve precision
  float_value  Decimal? @db.Decimal(10, 8) // Float value (0.00000000 to 1.00000000)
  pattern_seed Int? // Pattern seed for Case Hardened, etc.
  wear         String? // "factory_new", "minimal_wear", "field_tested", "well_worn", "battle_scarred"
  quality      String? // "normal", "stattrak", "souvenir"

  // Custom attributes
  // BDD: "Handle custom name tags correctly"
  custom_name String? // User-applied name tag

  // Stickers (JSONB for flexible schema)
  // BDD: "Display applied stickers on item"
  // Gotcha: Use JSONB over JSON for better query performance
  // Structure: [{ name: "Natus Vincere (Holo)", position: 1, wear: 0.5 }, ...]
  stickers Json? // Array of sticker objects

  // Trade restrictions
  // BDD: "Display trade-locked items with hold date"
  can_trade        Boolean   @default(true)
  trade_hold_until DateTime? // When trade lock expires

  // Pricing cache (from price aggregation API)
  // BDD: "Display inventory value comparison across platforms"
  current_value Decimal? @db.Decimal(10, 2) // Current market value (USD)
  best_platform String? // Platform with best price ("csfloat", "steam", etc.)

  // Acquisition tracking
  acquired_at DateTime? // When item was added to inventory (if available)

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Composite unique: prevent duplicate items in same inventory
  @@unique([inventory_id, steam_asset_id])

  // Performance indexes
  @@index([inventory_id]) // Fast inventory → items queries
  @@index([item_id]) // Fast item lookups
  @@index([current_value]) // Sort by value
  @@index([market_hash_name]) // Item matching queries
  @@index([trade_hold_until]) // Trade lock expiration queries

  // JSONB index for stickers (GIN index created via raw SQL migration)
  // See: prisma/migrations/20251109_add_inventory_tables/migration.sql
  // CREATE INDEX idx_inventory_items_stickers_gin ON inventory_items USING GIN (stickers);
}

// Feature 08: Budget Loadout Builder - Phase 1 (Database Foundation)
// Cosmetic categories for budget allocation algorithm
// BDD Reference: features/08-budget-loadout-builder-phase1.feature
//
// Critical Gotchas:
// - Cosmetic loadout vs in-game weapon loadout (DIFFERENT SYSTEMS)
// - Weapon charms added Oct 2025 (NEW category - mark with release_date)
// - Categories are cosmetic types, NOT weapon selection slots
// - 10 categories: weapon_skins, agent_ct, agent_t, knife, gloves, music_kit, stickers, patches, charms, graffiti
model CosmeticCategory {
  id String @id // PK: "weapon_skins", "agent_ct", "knife", "gloves", etc.

  // Display information
  name         String @db.VarChar(100) // User-facing name: "Weapon Skins", "Knife", "Gloves"
  category_type String @db.VarChar(50) // "weapon", "agent", "equipment", "customization"

  // Ordering and UI
  sort_order Int // Display order (weapon_skins=1, agent_ct=2, agent_t=3, etc.)
  icon_url   String? @db.Text // Icon URL for UI
  description String? @db.Text // Description with gotcha notes (e.g., "NEW" for charms)

  // Budget allocation
  is_required Boolean @default(false) // Required cosmetics (weapon_skins only)

  // Versioning (track when category was added to CS2)
  // BDD: "Weapon charms are marked as new"
  release_date DateTime? @db.Date // When category was added (charms: 2025-10-01)

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Indexes
  @@index([category_type]) // Filter by type (weapon, agent, etc.)
  @@index([sort_order]) // Ordered display

  @@map("cosmetic_categories")
}

// Weapon usage priorities for budget allocation algorithm
// BDD Reference: features/08-budget-loadout-builder-phase1.feature
//
// Critical Gotcha: Budget weights MUST sum to exactly 1.00 (100%)
// - AK-47: 25% (highest usage)
// - M4A4: 15%
// - M4A1-S: 15%
// - AWP: 20%
// - Desert Eagle: 10%
// - USP-S: 5%
// - Glock-18: 3%
// - P250: 2%
// - CZ75-Auto: 2%
// - Tec-9: 2%
// - Other pistols: 1%
model WeaponUsagePriority {
  weapon_type String @id @db.VarChar(50) // PK: "AK-47", "M4A4", "M4A1-S", "AWP", etc.

  // Usage statistics
  usage_percentage Decimal @db.Decimal(5, 2) // % of players who use this weapon (95.00 for AK-47)

  // Budget allocation weight
  // BDD: "Weapon priorities sum to 100% budget allocation"
  budget_weight Decimal @db.Decimal(5, 2) // Suggested budget allocation (0.25 for AK-47 = 25%)

  // Priority classification
  is_essential Boolean @default(false) // Essential weapons (AK-47, M4A4, M4A1-S, AWP)

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Indexes
  @@index([is_essential]) // Filter essential weapons
  @@index([usage_percentage]) // Sort by popularity

  @@map("weapon_usage_priority")
}

// Feature 08: Budget Loadout Builder - Phase 2 (Loadout Storage)
// User-created loadouts with weapon skins and cosmetics
// BDD Reference: features/08-budget-loadout-builder-phase2.feature
//
// Critical Gotchas:
// - Loadout stores COSMETIC selections (not in-game weapon loadout)
// - Weapon charms support (NEW - Oct 2025)
// - Float value optimization (0.15-0.18 FT, 0.07-0.09 MW for budget)
// - Budget vs actual_cost tracking
// - Slug generation for SEO
model Loadout {
  id String @id @default(uuid())

  // Owner
  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  // Basic information
  name        String @db.VarChar(255)
  description String? @db.Text
  theme       String? @db.VarChar(50) // "red", "blue", "dragon", etc.

  // Budget tracking
  budget      Decimal @db.Decimal(10, 2) // User's budget limit
  actual_cost Decimal @default(0) @db.Decimal(10, 2) // Sum of all items added

  // Custom budget allocation (user-configurable percentages)
  // Overrides preset prioritize modes (balance, price, quality, color_match)
  // Structure: { weapon_skins: 50.00, knife: 30.00, gloves: 20.00, agents: 0.00, music_kit: 0.00, charms: 0.00 }
  // Validation: All percentages must sum to 100.00, each value 0.00-100.00
  custom_allocation Json? // JSONB for flexible user-defined budget splits

  // Visibility
  is_public Boolean @default(false) // Shareable publicly

  // Social features
  views   Int @default(0)
  copies  Int @default(0) // Times copied by other users
  upvotes Int @default(0)

  // SEO
  slug String? @unique @db.VarChar(255) // /loadouts/red-dragon-budget

  // Creator attribution (for streamers/influencers)
  creator_name String? @db.VarChar(255)
  creator_link String? @db.Text

  // Timestamps
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  published_at DateTime? // When made public

  // Relationships
  weapon_skins LoadoutWeaponSkin[]

  // Indexes
  @@index([user_id]) // Fast user → loadouts queries
  @@index([slug]) // SEO-friendly URLs
  @@index([theme]) // Filter by theme
  @@index([is_public]) // Public loadout discovery
  @@index([created_at]) // Sort by newest

  @@map("loadouts")
}

// Weapon skins included in a loadout
// Many-to-many: Loadout ↔ Item (with additional metadata per weapon)
// BDD Reference: features/08-budget-loadout-builder-phase2.feature
//
// Critical Gotchas:
// - ONE skin per weapon_type per loadout (UNIQUE constraint)
// - Float value optimization for budget builds (0.15-0.18 FT preferred)
// - Stickers stored as JSONB (up to 4 per weapon)
// - Weapon charms stored as JSONB (NEW - Oct 2025)
model LoadoutWeaponSkin {
  id String @id @default(uuid())

  // Foreign keys
  loadout_id String
  loadout    Loadout @relation(fields: [loadout_id], references: [id], onDelete: Cascade)

  item_id String
  item    Item   @relation(fields: [item_id], references: [id], onDelete: Restrict)

  // Specific weapon type (AK-47, M4A4, M4A1-S, AWP, etc.)
  weapon_type String @db.VarChar(50)

  // Specific variant selection
  wear        String? @db.VarChar(20) // "Factory New", "Minimal Wear", "Field-Tested", etc.
  float_value Decimal? @db.Decimal(10, 8) // Actual float value (0.15-0.18 for FT, 0.07-0.09 for MW)
  quality     String? @db.VarChar(20) // "StatTrak", "Souvenir", or NULL

  // Pricing at time of selection
  selected_platform String  @db.VarChar(50) // "csfloat", "steam", etc.
  price             Decimal @db.Decimal(10, 2)

  // Customizations on this weapon
  // Gotcha: Use JSONB for flexible schema and query performance
  stickers Json? // [{ name: "Natus Vincere (Holo)", position: 1 }, ...]
  charms   Json? // NEW - weapon charms (Oct 2025)

  // Alternative suggestions (similar items within budget)
  alternatives Json? // [{ item_id, price, platform }, ...]

  // Timestamps
  created_at DateTime @default(now())

  // Composite unique: ONE skin per weapon_type per loadout
  @@unique([loadout_id, weapon_type])

  // Indexes
  @@index([loadout_id]) // Fast loadout → weapon skins queries
  @@index([weapon_type]) // Filter by weapon

  @@map("loadout_weapon_skins")
}
