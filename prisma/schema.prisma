// Prisma schema for csloadout.gg
// Database: PostgreSQL 18
// Critical Gotcha: PostgreSQL 17+ requires explicit NULLS handling in unique constraints

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id String @id @default(uuid())

  // Names (dual storage for display + search)
  name         String // Original name from API
  display_name String // User-facing display name
  search_name  String // Normalized for search (lowercase, no special chars)
  description  String?

  // Classification
  type        String // skin, sticker, case, collection, agent, graffiti, patch, music_kit
  rarity      String? // consumer, industrial, milspec, restricted, classified, covert, contraband
  quality     String  @default("normal") // normal, stattrak, souvenir
  wear        String  @default("none") // factory_new, minimal_wear, field_tested, well_worn, battle_scarred, none
  weapon_type String? // AK-47, M4A4, AWP, Knife, Gloves, etc.

  // Images (multi-source fallback strategy - BDD Gotcha #1: Steam CDN URL expiration)
  image_url          String
  image_url_fallback String?
  image_local_path   String?

  // Skin-specific attributes
  wear_min      Float?
  wear_max      Float?
  pattern_count Int?

  // Relationships (Feature 02: Relational Browsing)
  collection_id String?
  collection    Collection? @relation(fields: [collection_id], references: [id], onDelete: SetNull)

  // Many-to-many: Items can appear in multiple cases
  case_items CaseItem[]

  // Feature 04: One-to-many: Item has prices from multiple marketplaces
  marketplace_prices MarketplacePrice[]

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Composite unique constraint - prevents duplicate items
  // PostgreSQL 17+ gotcha: Multiple NULL values allowed by default
  // Migration will add: NULLS DISTINCT clause
  @@unique([name, quality, wear])

  // Indexes for performance (Feature 01 & 02)
  @@index([search_name])
  @@index([type, rarity])
  @@index([weapon_type])
  @@index([collection_id]) // Fast collection → items queries

  // Feature 03: Full-Text Search Indexes (created via raw SQL migration)
  // Note: These are PostgreSQL-specific and not represented in Prisma schema
  //
  // - search_vector: tsvector column with GIN index (full-text search)
  //   Auto-updated via trigger on INSERT/UPDATE
  //   Indexes: name (weight A), weapon_type (B), description (C), search_name (D)
  //
  // - idx_items_name_trigram: GIN index for fuzzy autocomplete (pg_trgm)
  //   Handles typos: "asimov" → "Asiimov"
  //
  // - idx_items_name_prefix: B-tree index for exact prefix matching
  //   Fast path for <3 character queries: "ak" → "AK-47 | Redline"
  //
  // - idx_items_price: B-tree index on MIN(marketplace_prices.total_cost)
  //   For price range filters: $5-$20
  //
  // - idx_items_rarity: B-tree index on rarity (WHERE rarity IS NOT NULL)
  //   For rarity filters: "classified", "covert"
  //
  // - idx_items_wear: B-tree index on wear (WHERE wear != 'none')
  //   For wear condition filters: "factory_new", "minimal_wear"
  //
  // - idx_items_float: B-tree index on (wear_min, wear_max)
  //   For float value filters: 0.00-0.01
  //
  // - idx_items_search_combo: Composite index (weapon_type, rarity)
  //   Optimizes common filter combinations: "AK-47 + classified"
  //
  // Performance Targets (BDD):
  // - Basic search: <100ms (p95)
  // - Filtered search: <300ms
  // - Autocomplete: <50ms
  //
  // See: prisma/migrations/20251108_add_search_indexes/migration.sql
}

model Collection {
  id String @id @default(uuid())

  // Basic Information
  name        String
  slug        String  @unique // URL-friendly identifier
  description String?
  image_url   String

  // Metadata
  release_date      DateTime
  is_discontinued   Boolean   @default(false)
  discontinued_date DateTime?

  // URL Management (Gotcha #7: URL slug changes break backlinks)
  previous_slugs String[] @default([]) // Array of old slugs for 301 redirects

  // Relationships
  items Item[] // One-to-many: Collection has many items

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Indexes
  @@index([slug]) // Fast URL lookups
  @@index([release_date]) // Sort by newest first
}

model Case {
  id String @id @default(uuid())

  // Basic Information
  name        String
  slug        String  @unique // URL-friendly identifier
  description String?
  image_url   String

  // Metadata
  key_price    Float
  release_date DateTime

  // URL Management
  previous_slugs String[] @default([]) // Historical slugs for redirects

  // Relationships
  case_items CaseItem[] // Many-to-many through join table

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Indexes
  @@index([slug]) // Fast URL lookups
  @@index([release_date])
}

// Many-to-many join table: Case ↔ Item
// Stores drop probabilities for each case-item pair
model CaseItem {
  id String @id @default(uuid())

  // Foreign keys
  case_id String
  case    Case   @relation(fields: [case_id], references: [id], onDelete: Cascade)

  item_id String
  item    Item   @relation(fields: [item_id], references: [id], onDelete: Cascade)

  // Drop probability (Gotcha #4: Must sum to 100% per case)
  drop_probability Float // Percentage (0.79 for Covert, 79.92 for Consumer/Industrial, etc.)

  // Special item flag (knives, gloves highlighted in UI)
  is_special_item Boolean @default(false)

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Composite unique: prevent duplicate case-item pairs
  @@unique([case_id, item_id])

  // Indexes
  @@index([case_id]) // Fast case → items queries
  @@index([item_id]) // Fast item → cases queries
}

// Feature 04: Multi-Marketplace Price Aggregation
// Stores current prices from multiple marketplaces for each item
// BDD Reference: features/04-price-aggregation.feature
model MarketplacePrice {
  id String @id @default(uuid())

  // Foreign key to Item
  item_id String
  item    Item   @relation(fields: [item_id], references: [id], onDelete: Cascade)

  // Marketplace identifier
  platform String // "csfloat", "steam", "csmoney", "buff163", "dmarket", "tradeit"

  // Pricing data
  price                Float // Base price in specified currency
  currency             String  @default("USD") // ISO 4217 currency code (USD, EUR, CNY, RUB)
  seller_fee_percent   Float? // Platform seller fee percentage
  buyer_fee_percent    Float? // Platform buyer fee percentage
  total_cost           Float // price * (1 + total_fees/100) - what user actually pays

  // Inventory & Availability
  quantity_available Int?    // For bulk traders - how many available at this price
  listing_url        String? // Direct link to marketplace listing

  // Data freshness tracking
  // BDD: "Display data freshness indicator" - used for Live/Stale/Paused status
  last_updated DateTime @default(now())

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Composite unique constraint: one price per item per platform
  // BDD: "Prevent duplicate prices for same item-platform combination"
  @@unique([item_id, platform])

  // Performance indexes
  @@index([item_id]) // Fast lookups: all prices for an item
  @@index([platform]) // Filter by marketplace
  @@index([total_cost]) // Sort by price
  @@index([last_updated]) // Freshness queries (stale data detection)
  @@index([item_id, total_cost]) // Composite: find cheapest price for item (optimal)
}

// Feature 05: Fee Transparency & Total Cost Calculator
// Platform-wide fee configuration for accurate fee calculations
// BDD Reference: features/05-fee-transparency.feature:7-14
//
// Critical Gotcha: PostgreSQL DECIMAL vs MONEY type
// - Use DECIMAL(5,2) for percentages (e.g., 15.00% stored as 15.00)
// - MONEY type has locale issues and limited precision
// - Decimal ensures consistent cross-platform calculations
model PlatformFeeConfig {
  // Platform identifier (primary key)
  platform String @id // "steam", "csfloat", "csmoney", "buff163", "dmarket", "tradeit"

  // Fee percentages (DECIMAL for precision)
  // Gotcha addressed: Using Decimal instead of Float for money calculations
  buyer_fee_percent      Decimal @default(0) @db.Decimal(5, 2) // Buyer fee (0.00 to 999.99%)
  seller_fee_percent     Decimal @default(0) @db.Decimal(5, 2) // Seller fee (0.00 to 999.99%)
  hidden_markup_percent  Decimal @default(0) @db.Decimal(5, 2) // Hidden markup (CS.MONEY bot markup: 20.00%)

  // Documentation and verification
  fee_notes     String // Human-readable fee explanation (e.g., "10% Steam fee + 5% game-specific fee")
  last_verified DateTime? // When fees were last verified
  source_url    String? // Link to official fee documentation

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Performance index
  @@index([platform]) // Fast platform lookups
}

// Feature 06: Steam OpenID Authentication
// NextAuth v5 (Auth.js) database schema
// BDD Reference: features/06-steam-authentication.feature
//
// Critical Gotchas:
// - Steam uses OpenID 2.0 (legacy), NOT OpenID Connect
// - SteamID extracted from claimed_id: http://steamcommunity.com/openid/id/76561198012345678
// - Session duration: 30 days (2592000 seconds)
// - CSRF protection: state parameter required
model User {
  id String @id @default(uuid())

  // Steam Profile Data (BDD Scenario: "Fetch and store Steam profile data")
  steam_id String @unique // 64-bit SteamID extracted from OpenID claimed_id

  // Profile Information (from ISteamUser/GetPlayerSummaries/v2)
  persona_name    String // Steam username (can change)
  profile_url     String // https://steamcommunity.com/id/username or /profiles/steamid
  avatar          String // Avatar image URL from Steam CDN
  profile_state   Int    @default(1) // 1 = configured profile, 0 = not set up

  // Game Ownership (BDD Scenario: "Check CS2 game ownership")
  has_cs2_game Boolean @default(false) // Result from ISteamUser/CheckAppOwnership (appid 730)

  // Activity Tracking
  last_logoff DateTime? // Last time user was online (Unix timestamp from API)
  last_login  DateTime  @default(now()) // Last authentication timestamp

  // Relationships
  accounts Account[]
  sessions Session[]

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Indexes
  @@index([steam_id]) // Fast Steam profile lookups
  @@index([last_login]) // Activity queries
}

// NextAuth Account model - stores OAuth provider details
// BDD Scenario: "Extract SteamID from OpenID claimed identity"
model Account {
  id String @id @default(uuid())

  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  type               String // "oauth" for Steam OpenID
  provider           String // "steam"
  provider_account_id String // SteamID64 from Steam

  // OAuth tokens (Steam OpenID doesn't use refresh tokens)
  refresh_token String?
  access_token  String?
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String?
  session_state String?

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Composite unique: one account per provider per user
  @@unique([provider, provider_account_id])
  @@index([user_id])
}

// Session model - tracks active user sessions
// BDD Scenario: "Session expiration after 30 days"
model Session {
  id String @id @default(uuid())

  session_token String   @unique
  user_id       String
  user          User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  expires DateTime // Set to now() + 30 days per BDD requirements

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Indexes
  @@index([user_id])
  @@index([expires]) // Session cleanup queries
}

// VerificationToken - for email verification (not used for Steam, but required by NextAuth schema)
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
